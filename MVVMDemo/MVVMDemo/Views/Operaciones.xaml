<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMDemo.Views.Operaciones">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Entry Placeholder="Valor 1" FontSize="Title" Text="{Binding Valor1}"></Entry>
            <Entry Placeholder="Valor 2" FontSize="Title" Text="{Binding Valor2}"></Entry>
            <Entry Placeholder="Valor 3" FontSize="Title" Text="{Binding Valor3}"></Entry>
            <Button Command="{Binding Sumar}" Text="Sumar" Background="white" TextColor="blue" FontSize="Title" FontAttributes="Bold"></Button>
            <Label Text="{Binding ResultadoSumar}" FontAttributes="Bold" FontSize="Title"/>

            <Button Command="{Binding Multiplicar}" Text="Multiplicar" Background="white" TextColor="Red" FontSize="Title" FontAttributes="Bold"></Button>
            <Label Text="{Binding ResultadoMultiplicar}" FontAttributes="Bold" FontSize="Title"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>